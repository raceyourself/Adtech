{
  "manifest_version": 2,

  "name": "We See Through: Advert Detector",
  "description": "Determines whether an advert has been scrolled into view.",
  "version": "1.1",

  "permissions": ["tabs", "<all_urls>", "nativeMessaging"],
  
  "web_accessible_resources": [
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
      	"jquery-1.11.1.js",
        "lodash.min.js",
		"util.js",
      	"content.js"
  	  ]
    }
  ],
  
  "background": {
    "scripts": [
      "jquery-1.11.1.js",
      "util.js",
      "background.js"
    ]
  }  
}
