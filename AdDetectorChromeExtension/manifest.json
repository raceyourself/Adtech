{
  "manifest_version": 2,

  "name": "We See Through",
  "description": "Determines whether an advert has been scrolled into view.",
  "version": "1.8",

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "idle",
    "storage"
  ],
  
  "options_page": "options.html",
  
  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "images/burst.jpg",
    "images/pink_rose_wall.jpg",
    "images/Caress_DebussyMarch_FingerTouch_FB.jpg",
    "images/CaressCouple_Technology_Facebook.jpg",
    "images/Caress_Movingstill_1_Armpetals.gif",
    "images/Caress_Movingstill_2_Bloom.gif",
    "images/Caress_Movingstill_3_City.gif",
    "images/Caress_Movingstill_4_Clock.gif",
    "images/Caress_Movingstill_7_Roseburst.gif"
  ],
  
  "background": {
    "scripts": [
      "lib/jquery-1.7.1.min.js",
      
      "adblock/port.js",
      "adblock/functions.js",
      "adblock/filtering/domainset.js",
      "adblock/filtering/filteroptions.js",
      "adblock/filtering/filtertypes.js",
      "adblock/filtering/filterset.js",
      "adblock/filtering/myfilters.js",
      "adblock/filtering/filternormalizer.js",
      "adblock/idlehandler.js",
      
      "adblock_init.js",
      
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "all_frames": true,
      "match_about_blank": true,
      "js": [
      	"lib/jquery-1.11.1.js",
        "lib/lodash-3.8.0.min.js",
        "lib/moment-2.10.3.min.js",
        
      	"content.js"
  	  ]
    }
  ]  
}
