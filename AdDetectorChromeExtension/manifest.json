{
  "manifest_version": 2,

  "name": "We See Through: Advert Detector",
  "description": "Determines whether an advert has been scrolled into view.",
  "version": "1.2",

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "idle"
  ],
  
  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "scripts": [
      // Libs
      "lib/jquery-1.7.1.min.js", // the version that the forked AdBlock uses...
      
      // All of these have been lifted from AdBlock for Chrome unmodified
      "adblock/port.js",
      "adblock/functions.js",
      "adblock/filtering/domainset.js",
      "adblock/filtering/filteroptions.js",
      "adblock/filtering/filtertypes.js",
      "adblock/filtering/filterset.js",
      "adblock/filtering/myfilters.js",
      "adblock/filtering/filternormalizer.js",
      "adblock/idlehandler.js",
      
      // Custom
      "adblock_init.js", // custom stub methods/vars for adblock code
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "all_frames": true,
      "match_about_blank": true,
      "js": [
        // Libs
      	"lib/jquery-1.11.1.js",
        "lib/lodash-3.8.0.min.js",
        
        // Custom
      	"content.js"
  	  ]
    }
  ]  
}
