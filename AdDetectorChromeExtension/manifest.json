{
  "manifest_version": 2,

  "name": "We See Through: Advert Detector",
  "description": "Determines whether an advert has been scrolled into view.",
  "version": "1.1",

  "permissions": ["tabs", "<all_urls>", "nativeMessaging"],
  
  "web_accessible_resources": [
  ],
  "background": {
    "scripts": [
      // Libs
      "jquery/jquery.min.js",
      
      // All of these have been lifted from AdBlock for Chrome
      "functions.js",
      "filtering/domainset.js",
      "filtering/filteroptions.js",
      "filtering/filtertypes.js",
      "filtering/filterset.js",
      "filtering/myfilters.js",
      "filtering/filternormalizer.js",
      "idlehandler.js",
      
      // Custom
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "all_frames": true,
      "match_about_blank": true,
      "js": [
        // Lifted from AdBlock for Chrome
        "functions.js",
        "filtering/filteroptions.js",
        
        // Libs
      	"jquery-1.11.1.js",
        "lodash.min.js",
        
      	"content.js"
  	  ]
    }
  ]  
}
