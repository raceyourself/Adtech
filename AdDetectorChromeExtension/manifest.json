{
  "manifest_version": 2,

  "name": "Advert Detector",
  "description": "Determines whether an advert has been scrolled into view.",
  "version": "1.0",

  "permissions": ["tabs", "<all_urls>", "nativeMessaging"],
  
  "web_accessible_resources": [
    "ref_images/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
      	"jquery-1.11.1.js",
      	"jquery.xpath-0.2.5.js",
        	"util.js",
      	"content.js"
  	  ]
    }
  ],
  
  "background": {
    "scripts": [
      "jquery-1.11.1.js",
      "jquery.xpath-0.2.5.js",
      "util.js",
      "background.js"
    ]
  }  
}
